{
  "manifest_version": 3,
  "name": "Container Tab Groups Synchronisation",
  "description": "Automatically syncs tab groups with contextual identities (Firefox Multi Account Containers).",
  "version": "1.0.0",
  "icons": {
    "64": "icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "@container-tab-groups-sync",
      "strict_min_version": "139.0"
    }
  },
  "permissions": ["tabs", "tabGroups", "storage", "cookies", "contextualIdentities"],
  "default_locale": "en",
  "background": {
    "scripts": ["background.js"]
  }
}
